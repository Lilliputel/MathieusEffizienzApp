<UserControl x:Class="UiLayer.Themes.ThemeBlock"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<StackPanel>
		<TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=Name}"
				   Foreground="{DynamicResource Foreground}"
				   Background="Transparent"
				   FontSize="16"
				   FontStyle="Italic"/>
		<TextBlock Text="Foreground 1"
				   Foreground="{DynamicResource Fore_1}"
				   Background="Transparent"/>
		<TextBlock Text="Foreground 2"
				   Foreground="{DynamicResource Fore_2}"
				   Background="Transparent"/>
		<TextBlock Text="Foreground 3"
				   Foreground="{DynamicResource Fore_3}"
				   Background="Transparent"/>
		<TextBlock Text="Highlight 1"
				   Foreground="{DynamicResource ForeHigh_1}"
				   Background="Transparent"/>
		<TextBlock Text="Highlight 2"
				   Foreground="{DynamicResource ForeHigh_2}"
				   Background="Transparent"/>
	</StackPanel>
	
</UserControl>
