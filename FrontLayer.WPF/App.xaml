<Application x:Class="FrontLayer.WPF.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 
			 xmlns:converter="clr-namespace:FrontLayer.WPF.Converters"
			 StartupUri="MainWindow.xaml">
	
	<Application.Resources>

		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>

				<!-- This is the Theme-Dictionary and gets set in the Codebehind -->
				<ResourceDictionary/>
				
				<!-- This ResourceDictionary contains every other ResourceDictionary for Controls -->
				<ResourceDictionary Source="Dictionaries/MainDictionary.xaml"/>

			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
		
	</Application.Resources>
</Application>
