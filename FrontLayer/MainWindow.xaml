<Window x:Class="FrontLayer.Windows.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

		xmlns:UserControls="clr-namespace:FrontLayer.Components"
		xmlns:Themes="clr-namespace:FrontLayer.Themes"
		
		Title="Prototype_Effizienz" 
		x:Name="Fenster"
		MinWidth="1200" Width="{Binding ElementName=Fenster, Path=MinWidth}"
		MinHeight="680" Height="{Binding ElementName=Fenster, Path=MinHeight}"
		
		Background="{DynamicResource Background}">

	<Grid>
		<!--#region Grid Definition -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<!-- #endregion -->

		<UserControls:Ribbon Grid.Column="1" Grid.Row="0"/>

		<UserControls:NavBar Grid.Column="0" Grid.Row="1"/>

		<!-- Hauptansicht -->
		<ContentControl	Grid.Column="1" Grid.Row="1"
						Content="{Binding SelectedVMMain}"
						Margin="5" Width="860" Height="350"/>

		<!-- Nebenansicht -->
		<ContentControl Grid.Column="2" Grid.Row="1"
						Content="{Binding SelectedVMEssential}"						
						Margin="5" Width="220"/>

		<Themes:ThemeDisplay Grid.Row="2" Grid.Column="1"/>

	</Grid>

</Window>
