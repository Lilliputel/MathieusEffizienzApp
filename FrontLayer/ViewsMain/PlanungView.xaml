<UserControl x:Class="FrontLayer.Views.PlanungView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<UserControl.Resources>
	</UserControl.Resources>
	
	<!-- Backgrond-Color -->
	<Border Background="{DynamicResource Back_1}"
			Style="{StaticResource BorderRounded}">

		<DataGrid Width="620" Height="Auto"
				  ItemsSource="{Binding DTStundenplan}" 
				  Background="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=Background}"
				  BorderThickness="0" MaxHeight="320" ColumnWidth="72"
				  HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
				  AutoGenerateColumns="True" EnableRowVirtualization="True"
				  SelectionMode="Extended" SelectionUnit="Cell" IsReadOnly="True"
				  CanUserReorderColumns="False" CanUserDeleteRows="False" CanUserAddRows="False" CanUserResizeRows="False" CanUserResizeColumns="False" CanUserSortColumns="False">
			
		</DataGrid>
		
	</Border>
	
</UserControl>
 