<UserControl x:Class="FrontLayer.Components.Ribbon"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 
			 xmlns:UserControls="clr-namespace:FrontLayer.Components"

			 Width="Auto"
			 Height="60">
	
	<StackPanel Orientation="Horizontal">

		<Button x:Name="Button_Neu_Kategorie"
				Command="{Binding CommandUpdateView}" CommandParameter="NewCategory">
			<Button.Content>
				<UserControls:VectorIcon Foreground="{DynamicResource Foreground}" Style="{StaticResource IconKategorie}"/>
			</Button.Content>
		</Button>
		<Button x:Name="Button_Neu_Aufgabe"
				Command="{Binding CommandUpdateView}" CommandParameter="NewGoal">
			<Button.Content>
				<UserControls:VectorIcon Foreground="{DynamicResource Foreground}" Style="{StaticResource IconAufgabe2}"/>
			</Button.Content>
		</Button>
		<Button x:Name="Button_Pomodoro"
				Command="{Binding CommandUpdateView}" CommandParameter="Pomodoro">
			<Button.Content>
				<UserControls:VectorIcon Foreground="{DynamicResource Foreground}" Style="{StaticResource IconProjekt1}"/>
			</Button.Content>
		</Button>
		<Button x:Name="Button_CreateObjects"
				Command="{Binding CommandCreateObjects}">
			<Button.Content>
				<UserControls:VectorIcon Foreground="{DynamicResource Foreground}" 
										 Style="{StaticResource IconAufgabe1}"/>
			</Button.Content>
		</Button>

	</StackPanel>
</UserControl>
