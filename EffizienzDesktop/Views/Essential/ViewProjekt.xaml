<UserControl x:Class="Effizienz.Views.ViewProjekt"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:Effizienz.Views" 
			 mc:Ignorable="d">
	
	<UserControl.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="Margin" Value="0,2"/>
		</Style>
	</UserControl.Resources>

	<StackPanel>
		<TextBlock Text="Titel:"/>
		<TextBox x:Name="TextBox_Titel"/>

		<TextBlock Text="Beschreibung:"/>
		<TextBox x:Name="TextBox_Beschreibung"/>

		<TextBlock Text="Kategorie:"/>
		<ComboBox x:Name="ComboBox_Kategorie">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Titel}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Text="Enddatum:"/>
		<DatePicker x:Name="DatePicker_EndDatum"/>

		<Button x:Name="Button_SpeichernSchliessen"
				Click="Button_SpeichernSchliessen_Click"
				Content="Speichern + Schliessen!"
				Margin="0,5"/>

	</StackPanel>

</UserControl>
