<UserControl x:Class="Effizienz.Views.ViewAufgabe"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<UserControl.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="Margin" Value="0,2"/>
		</Style>
	</UserControl.Resources>

	<StackPanel>
		<!-- Gruppe Titel -->
		<TextBlock Text="Titel:"/>
		<TextBox x:Name="TextBox_Titel"/>

		<!-- Gruppe Beschreibung -->
		<TextBlock Text="Beschreibung:"/>
		<TextBox x:Name="TextBox_Beschreibung"/>
		
		<!-- Gruppe Kategorie ComboBox -->
		<TextBlock Text="Kategorie:"/>
		<ComboBox x:Name="ComboBox_Kategorie" ItemsSource="{Binding Kategorien}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Titel}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		
		<!-- Gruppe Projekt ComboBox -->
		<TextBlock Text="Projekt:"/>
		<ComboBox x:Name="ComboBox_Projekt" ItemsSource="{Binding Projekte}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Titel}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<!-- Gruppe Enddatum DatePicker -->
		<TextBlock Text="Enddatum:"/>
		<DatePicker x:Name="DatePicker_EndDatum"/>

		<!-- Gruppe Speichern Button -->
		<Button x:Name="Button_SpeichernSchliessen"
				Click="Button_SpeichernSchliessen_Click"
				Content="Speichern + Schliessen!"
				Margin="0,5"/>

	</StackPanel>

</UserControl>
