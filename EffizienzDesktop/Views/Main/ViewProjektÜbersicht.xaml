<UserControl x:Class="EffizienzNeu.Views.ViewProjektÜbersicht"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 
			 xmlns:classes="clr-namespace:EffizienzNeu.Classes">

	<TreeView x:Name="TreeView_Projekte" Width="Auto">

		<TreeView.Resources>

			<HierarchicalDataTemplate DataType="{x:Type classes:MenuItem}" ItemsSource="{Binding Aufgaben}">
				<Border Style="{StaticResource BorderRounded}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="200"/>
							<ColumnDefinition Width="50"/>
						</Grid.ColumnDefinitions>
						<TextBlock Text="{Binding ProjektItem.Titel}" Grid.Column="0"/>
						<TextBlock Text="{Binding ProjektItem.ZeitGesamt}" Grid.Column="1" HorizontalAlignment="Right"/>
					</Grid>
				</Border>
			</HierarchicalDataTemplate>
			
			<DataTemplate DataType="{x:Type classes:Aufgabe}">
				<TextBlock Text="{Binding Titel}"/>
			</DataTemplate>

		</TreeView.Resources>
	</TreeView>
	
</UserControl>
