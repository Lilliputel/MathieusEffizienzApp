<UserControl x:Class="EffizienzNeu.Views.ViewProjektÜbersicht"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 
			 xmlns:classes="clr-namespace:EffizienzNeu.Classes">

	<TreeView x:Name="TreeView_Projekte">
		<TreeView.Resources>
			<HierarchicalDataTemplate DataType="{x:Type classes:MenuItem}" ItemsSource="{Binding Aufgaben}">
				<DockPanel>
					<TextBlock Text="{Binding ProjektItem.Titel}" DockPanel.Dock="Left"/>
					<TextBlock Text="{Binding ProjektItem.ZeitGesamt}" DockPanel.Dock="Right"/>
				</DockPanel>
			</HierarchicalDataTemplate>
			<DataTemplate DataType="{x:Type classes:Aufgabe}">
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="{Binding Titel}"/>
				</StackPanel>
			</DataTemplate>
		</TreeView.Resources>
	</TreeView>
	
</UserControl>
