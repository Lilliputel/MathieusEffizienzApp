<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					x:Name="DictionaryBase">

	<Style x:Key="BorderRounded" TargetType="Border">
		<Style.Setters>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="BorderBrush" Value="{x:Null}"/>
			<Setter Property="Padding" Value="2"/>
		</Style.Setters>
	</Style>

	<Style TargetType="Button">
		<Style.Setters>
			<Setter Property="Background" Value="DarkGray"/>
			<Setter Property="Margin" Value="1"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" Style="{StaticResource BorderRounded}">
							<ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style.Setters>
	</Style>

	<Style TargetType="TreeView">
		<Style.Setters>
			<Setter Property="BorderBrush" Value="{x:Null}"/>
		</Style.Setters>
	</Style>

	<Style TargetType="TreeViewItem">
		<Style.Resources>
			<Style TargetType="Border" BasedOn="{StaticResource BorderRounded}">
				<Setter Property="Background" Value="{StaticResource Background}"/>
			</Style>
		</Style.Resources>
	</Style>

</ResourceDictionary>